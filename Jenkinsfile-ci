pipeline 
{
    agent any

    environment 
    {
        VENV_DIR = ".venv"
    }

    stages 
    {
        stage('unit test') 
        {
            steps 
            {
                echo 'Test stage: Run unit tests...'                
            }
        }
        stage('package') 
        {
            steps 
            {
                echo 'Build stage: setup Python virtual environment and build wheel'
                dir('.') 
                {
                    sh """
                        # Create virtual environment and install build tool
                        python -m venv ${VENV_DIR}
                        ./${VENV_DIR}/bin/pip install build

                        # Build wheel from root
                        ./${VENV_DIR}/bin/python -m build --wheel --outdir dist
                    """
                }
            }
        }
    }

    post 
    {
        success 
        {
            echo 'Archive build artifacts'
            archiveArtifacts artifacts: 'dist/*.whl', fingerprint: true    
        }
    }
}
